# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page

->          /hmrc-frontend                               hmrcfrontend.Routes

GET        /                                            controllers.benefits.HomeController.onPageLoad()
GET        /continue                                    controllers.benefits.IndexController.onPageLoad()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                                controllers.Assets.versioned(path="/public", file: Asset)

GET        /index                                       controllers.benefits.IndexController.onPageLoad()

GET        /language/:lang                              controllers.LanguageSwitchController.switchToLanguage(lang: String)

GET        /refresh-session                             controllers.KeepAliveController.keepAlive()

GET        /there-is-a-problem                          controllers.JourneyRecoveryController.onPageLoad(continueUrl: Option[RedirectUrl] ?= None)

GET        /check-your-answers/:index                          controllers.benefits.CheckYourAnswersController.onPageLoad(index: Int)
POST         /submit-child/:index                          controllers.benefits.CheckYourAnswersController.onSubmit(index: Int)


GET        /account/sign-out                            controllers.auth.AuthController.signOut()
GET        /account/signed-out                          controllers.auth.SignedOutController.onPageLoad()

GET        /unauthorised                                controllers.UnauthorisedController.onPageLoad()

# Dev login
GET        /dev-login                                    controllers.DevLoginController.showLogin()
POST       /dev-login                                    controllers.DevLoginController.submitLogin()

GET        /start                                       controllers.benefits.StartController.onPageLoad()

GET        /isUserClaimingChb                           controllers.benefits.IsUserClaimingChbController.onPageLoad(mode: Mode = NormalMode)
POST       /isUserClaimingChb                           controllers.benefits.IsUserClaimingChbController.onSubmit(mode: Mode = NormalMode)
GET        /changeIsUserClaimingChb                     controllers.benefits.IsUserClaimingChbController.onPageLoad(mode: Mode = CheckMode)
POST       /changeIsUserClaimingChb                     controllers.benefits.IsUserClaimingChbController.onSubmit(mode: Mode = CheckMode)

GET        /addAChild                                    controllers.benefits.AddAChildController.onPageLoad(mode: Mode = NormalMode)
POST       /addAChild/:index                                    controllers.benefits.AddAChildController.onSubmit(mode: Mode = NormalMode, index: Int)
GET        /addAChild                     controllers.benefits.AddAChildController.onPageLoad(mode: Mode = NormalMode)
POST       /addAChild/:index/change                      controllers.benefits.AddAChildController.onSubmit(mode: Mode = NormalMode, index: Int)

GET        /childsName                                   controllers.benefits.ChildsNameController.onPageLoad(mode: Mode = NormalMode, index: Int)
POST       /childsName                                   controllers.benefits.ChildsNameController.onSubmit(mode: Mode = NormalMode, index: Int)
GET        /childsName/:index/change                              controllers.benefits.ChildsNameController.onPageLoad(mode: Mode = CheckMode, index: Int)
POST       /childsName/:index/change                              controllers.benefits.ChildsNameController.onSubmit(mode: Mode = CheckMode, index: Int)

GET        /childsBirthDate                              controllers.benefits.ChildsBirthDateController.onPageLoad(mode: Mode = NormalMode, index: Int)
POST       /childsBirthDate                              controllers.benefits.ChildsBirthDateController.onSubmit(mode: Mode = NormalMode, index: Int)
GET        /childsBirthDate/:index/change                controllers.benefits.ChildsBirthDateController.onPageLoad(mode: Mode = CheckMode, index: Int)
POST       /childsBirthDate/:index/change                controllers.benefits.ChildsBirthDateController.onSubmit(mode: Mode = CheckMode, index: Int)

GET        /dlaRate                                      controllers.benefits.DlaRateController.onPageLoad(mode: Mode = NormalMode, index: Int)
POST       /dlaRate                                      controllers.benefits.DlaRateController.onSubmit(mode: Mode = NormalMode, index: Int)
GET        /dlaRate/:index/change                        controllers.benefits.DlaRateController.onPageLoad(mode: Mode = CheckMode, index: Int)
POST       /dlaRate/:index/change                        controllers.benefits.DlaRateController.onSubmit(mode: Mode = CheckMode, index: Int)

GET        /qualifiesForDla                              controllers.benefits.QualifiesForDlaController.onPageLoad(mode: Mode = NormalMode, index: Int)
POST       /qualifiesForDla                              controllers.benefits.QualifiesForDlaController.onSubmit(mode: Mode = NormalMode, index: Int)
GET        /qualifiesForDla/:index/change                controllers.benefits.QualifiesForDlaController.onPageLoad(mode: Mode = CheckMode, index: Int)
POST       /qualifiesForDla/:index/change                controllers.benefits.QualifiesForDlaController.onSubmit(mode: Mode = CheckMode, index: Int)

GET        /deleteChild/:index                        controllers.benefits.DeleteChildController.onPageLoad(mode: Mode = CheckMode, index: Int)
POST       /deleteChild/:index                        controllers.benefits.DeleteChildController.onSubmit(mode: Mode = CheckMode, index: Int)